<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Min/Max lines and ellipsize are manipulated to expand/collapse the review -->
        <TextView
            android:id="@+id/review_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:minLines="3"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="@string/toolstext_review_content" />

        <TextView
            android:id="@+id/review_author_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="@string/toolstext_review_author" />
    </LinearLayout>
</android.support.v7.widget.CardView>
